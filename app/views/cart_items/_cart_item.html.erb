<div class="card ecommerce-card">
  <div class="item-img">
    <a href="app-ecommerce-details.html">
    <img src="<%= asset_path('1.png') %>" alt="img-placeholder" />
    </a>
  </div>
  <div class="card-body">
    <div class="item-name">
      <h6 class="mb-0"><a href="app-ecommerce-details.html" class="text-body"><%= cart_item&.product&.name %></a></h6>
      <span class="item-company">By <a href="javascript:void(0)" class="company-name">Apple</a></span>
      <div class="item-rating">
        <ul class="unstyled-list list-inline">
          <li class="ratings-list-item"><i data-feather="star" class="filled-star"></i></li>
          <li class="ratings-list-item"><i data-feather="star" class="filled-star"></i></li>
          <li class="ratings-list-item"><i data-feather="star" class="filled-star"></i></li>
          <li class="ratings-list-item"><i data-feather="star" class="filled-star"></i></li>
          <li class="ratings-list-item"><i data-feather="star" class="unfilled-star"></i></li>
        </ul>
      </div>
    </div>
    <span class="text-success mb-1">In Stock</span>
    <div class="cart-item-qty">
      <div class="input-group">
        <input class="touchspin-cart" type="number" value="<%= cart_item.quantity %>">
      </div>
    </div>

    <span class="delivery-date text-muted">Delivery by, Wed Apr 25</span>
    <span class="text-success">17% off 4 offers Available</span>
  </div>
  <div class="item-options text-center">
    <div class="item-wrapper">
      <div class="item-cost">
        <h4 class="item-price"><%= cart_item.product.price * cart_item.quantity %></h4>
        <p class="card-text shipping">
          <span class="badge badge-pill badge-light-success">Free Shipping</span>
        </p>
      </div>
    </div>
    <button type="button" class="btn btn-light mt-1 remove-wishlist" data-id="<%= cart_item.id %>">
      <i data-feather="x" class="align-middle mr-25"></i>
      <span>Remove</span>
    </button>
    <!-- <button type="button" class="btn btn-primary btn-cart move-cart">
      <i class="ficon" data-feather="shopping-cart"></i>
      <span class="text-truncate">MUA NGAY</span>
    </button> -->
  </div>
</div>
